<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: monospace;
        background-color: black;
        position: relative;
        overflow: hidden;
    }

    body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        pointer-events: none;
        z-index: 9999;
        background:
            repeating-linear-gradient(
                to bottom,
                rgba(0,255,0,0.10) 0px,
                rgba(0, 20, 0, 0.1) 2px,
                transparent 2px,
                transparent 8px
            ),
            repeating-linear-gradient(
                to bottom,
                rgba(0,255,0,0.04) 0px,
                rgba(0,255,0,0.04) 4px,
                transparent 4px,
                transparent 16px
            ),
            rgba(0,255,100,0.04);
        mix-blend-mode: lighten;
        animation: crt-move 2s linear infinite;
    }

    @keyframes crt-move {
        0% { background-position: 0 0, 0 0, 0 0; }
        100% { background-position: 0 8px, 0 16px, 0 0; }
    }

    body::after {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        pointer-events: none;
        z-index: 10000;
        background:
            repeating-linear-gradient(
                to bottom,
                rgba(8, 48, 8, 0.12) 0px,
                rgba(0,255,0,0.12) 2px,
                transparent 2px,
                transparent 8px
            ),
            repeating-linear-gradient(
                to bottom,
                rgba(0,255,0,0.15) 0px,
                rgba(0,255,0,0.15) 2px,
                transparent 2px,
                transparent 16px
            ),
            repeating-linear-gradient(
                to bottom,
                rgba(0,255,0,0.10) 0px,
                rgba(0,255,0,0.10) 2px,
                transparent 2px,
                transparent 24px
            );
        opacity: 0.7;
        mix-blend-mode: lighten;
        animation:
            crt-flicker 1s steps(2, end) infinite alternate,
            crt-flicker2 1.2s steps(3, end) infinite alternate,
            crt-flicker3 1.4s steps(4, end) infinite alternate;
    }

    @keyframes crt-flicker {
        0%, 100% { opacity: 0.7; }
        50% { opacity: 0.2; }
    }
    @keyframes crt-flicker2 {
        0%, 100% { opacity: 0.7; }
        40% { opacity: 0.1; }
        60% { opacity: 0.5; }
    }
    @keyframes crt-flicker3 {
        0%, 100% { opacity: 0.7; }
        30% { opacity: 0.3; }
        70% { opacity: 0.1; }
    }
</style>
